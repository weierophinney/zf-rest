{
    "name": "zfcampus/zf-rest",
    "description": "ZF Module providing structure for RESTful resources",
    "license": "BSD-3-Clause",
    "keywords": [
        "zendframework",
        "zf",
        "zf3",
        "zend",
        "module",
        "rest"
    ],
    "support": {
        "issues": "https://github.com/zfcampus/zf-rest/issues",
        "source": "https://github.com/zfcampus/zf-rest",
        "rss": "https://github.com/zfcampus/zf-rest/releases.atom",
        "chat": "https://zendframework-slack.herokuapp.com",
        "forum": "https://discourse.zendframework.com/c/questions/apigility"
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "zendframework/zend-eventmanager": "^2.6.3 || ^3.0.1",
        "zendframework/zend-mvc": "^2.7.9 || ^3.0.2",
        "zendframework/zend-paginator": "^2.7",
        "zendframework/zend-stdlib": "^2.7.7 || ^3.0.1",
        "zfcampus/zf-api-problem": "^1.2.2",
        "zfcampus/zf-content-negotiation": "^1.2.1",
        "zfcampus/zf-hal": "^1.4",
        "zfcampus/zf-mvc-auth": "^1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7.27 || ^6.5.8 || ^7.1.5",
        "zendframework/zend-coding-standard": "~1.0.0",
        "zendframework/zend-escaper": "^2.5.2",
        "zendframework/zend-http": "^2.5.4",
        "zendframework/zend-inputfilter": "^2.7.2",
        "zendframework/zend-servicemanager": "^2.7.6 || ^3.1",
        "zendframework/zend-uri": "^2.5.2",
        "zendframework/zend-validator": "^2.8.1",
        "zendframework/zend-view": "^2.8.1"
    },
    "autoload": {
        "psr-4": {
            "ZF\\Rest\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZFTest\\Rest\\": "test/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.4.x-dev",
            "dev-develop": "1.5.x-dev"
        },
        "zf": {
            "module": "ZF\\Rest"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "homepage": "http://apigility.org/"
}
